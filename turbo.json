{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "ANALYZE"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["NEXT_PUBLIC_*"]
    },
    "shortcuts#build": {
      "env": [
        "DATABASE_URL",
        "DIRECT_URL",
        "NEXT_RUNTIME",
        "ANALYZE",
        "GOOGLE_GEMINI_KEY",
        "GOOGLE_GEMINI_MODEL",
        "AUTH_SECRET",
        "AUTH_TRUST_HOST",
        "S3_DOMAIN",
        "S3_BUCKET_NAME",
        "S3_BUCKET_REGION",
        "S3_BUCKET_ENDPOINT",
        "S3_BUCKET_ACCESS_KEY_ID",
        "S3_BUCKET_SECRET_ACCESS_KEY",
        "INDEX_NOW_API_KEY",
        "INDEX_NOW_HOST_URL",
        "CLOUDFLARE_TURNSTILE_SECRET_KEY"
      ],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "web#build": {
      "env": [
        "SITE_NAME",
        "DATABASE_URL",
        "GOOGLE_GEMINI_KEY",
        "GOOGLE_GEMINI_MODEL",
        "AUTH_SECRET",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN"
      ],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "blog#build": {
      "env": ["REVALIDATE_TOKEN", "GITHUB_*"],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "live-photo#build": {
      "env": ["DATABASE_URL"],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
