{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@repo/typescript-config": "workspace:*",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "prettier": {
    "arrowParens": "always",
    "trailingComma": "all",
    "singleQuote": true,
    "semi": false,
    "importOrder": [
      "<BUILTIN_MODULES>",
      "^(react/(.*)$)|^(react$)",
      "^(next/(.*)$)|^(next$)",
      "<THIRD_PARTY_MODULES>",
      "",
      "^types$",
      "^#/types/(.*)$",
      "^#/config/(.*)$",
      "^#/lib/(.*)$",
      "^#/hooks/(.*)$",
      "^#/components/ui/(.*)$",
      "^#/components/(.*)$",
      "^#/styles/(.*)$",
      "^#/app/(.*)$",
      "",
      "^[./]"
    ],
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "decorators-legacy"
    ],
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ]
  }
}
